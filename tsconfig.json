{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "declaration": true,
    "newLine": "LF",
    "outDir": "dist",
    "strict": true,
    "types": ["mocha","node"],
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "dom",
      "es2015"
    ],
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*.ts",
    "tests/**/*.ts"
  ]
}
